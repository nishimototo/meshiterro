<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1>画像投稿フォーム</h1>
      <%= form_with model: @post_image, local: true do |f| %>
        <div class="form-group">
          <label></label>
          <%= f.attachment_field :image, class:"form-control-file" %>
        </div>
        <div class="form-group">
          <label></label>
          <%= f.text_field :shop_name, placeholder: "ショップ名", class:"form-control" %>
        </div>
        <div class="form-group">
          <label></label>
          <%= f.text_area :caption, placeholder: "コメントここに", class:"form-control" %>
        </div>
        <%= f.submit "投稿", class:"btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>